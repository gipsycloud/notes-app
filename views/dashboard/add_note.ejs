<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/dashboard">Dashboard</a>
          </li>
          <li class="breadcrumb-item active fs-4">
            Add Note
          </li>
        </ol>
      </nav>

      <div class="col d-flex justify-content-between align-items-center">
        <h3 class="h3">Add Note</h3>
      </div>
    </div>
  </div>

  <form action="/dashboard/add_note" method="POST" class="position-relative">
    <div class="form group mb-4 position-absolute" style="left:1px; top:1px; right:1px">
      <input type="text" class="form-control fw-bold border-0 fs-4" name="title" placeholder="title">
    </div>

    <div class="form-group mb-4">
      <textarea name="content" id="content" class="form-control pt-5 fs-4" placeholder="Take a note ....."
        rows="12"></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">+ Add Note</button>
    </div>
  </form>
</div>